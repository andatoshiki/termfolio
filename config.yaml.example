ssh:
  # Port to listen on
  port: 2222
  
  # Address to bind to (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
  address: "0.0.0.0"
  
  # Path to the SSH host key (will be generated if not present)
  hostKeyPath: ".ssh/host_ed25519"
  
  # Authentication mode for SSH public key authentication
  # Options:
  #   "none" (default, recommended) - No public key auth, anyone can connect without keys
  #   "authorized_keys" - Only allow keys listed in the authorizedKeys file
  #   "allow_all" - INSECURE: Accept any public key (not recommended)
  authMode: "none"
  
  # Path to authorized_keys file (required when authMode is "authorized_keys")
  # Format: Standard OpenSSH authorized_keys format
  # authorizedKeys: ".ssh/authorized_keys"

counter:
  # You can also set "counter: false" to disable entirely.
  # Enable/disable the visit counter
  enabled: true

  # Path to the SQLite database file
  dbPath: "data/visitors.db"
